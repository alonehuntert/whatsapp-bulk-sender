{
  "manifest_version": 3,
  "name": "WhatsApp Toplu Mesaj Gönderici",
  "version": "1.0.0",
  "description": "WhatsApp Web için toplu mesaj gönderim sistemi - 300 kişiye günde 10-15 mesaj otomasyonu",
  "permissions": [
    "storage",
    "alarms",
    "tabs",
    "notifications"
  ],
  "host_permissions": [
    "https://web.whatsapp.com/*"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background/background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://web.whatsapp.com/*"],
      "js": ["content/content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}